<%= button_to emails_path, method:"create", :class => "ml-4 mb-5 btn-success" do %>
  Recevoir un email
<% end %>

<div class="d-flex">
  <div class="col-2">
    <% @emails.each do |email| %>
      <div class="card">
        <div class="card-body">
          <%= link_to email.object, email_path(email.id) %>
        </div>
      </div>
    <% end %>

  </div>
  <div class="col-10">
    <div class="card">
      <div class="card-body">
        <%= @email.body %>
      </div>
    </div>
  </div>
</div>
